@model EnterpriseServices.Controllers.PdfController.UrlToPdfData
@{
	Layout = "~/Views/Shared/_LayoutMobile.cshtml";
}
@* ReSharper disable UnknownCssClass *@

<div class="panel panel-primary full-height">
	<div class="panel-body full-height">
		<div class="row full-height" style="margin: 16px;">
			@using (Html.BeginForm("UrlToPdf", "Pdf", FormMethod.Post, new { id = "UrlToPdf" }))
			{
				<div style="text-align: left;">
					<div class="editor-label">
						@Html.LabelFor(model => model.Url, "URL")
					</div>
					<div>
						@Html.TextBoxFor(model => model.Url, new { style = "width: 100%;" })
					</div>
					<div style="margin-top: 8px;">
						<button type="button" class="btn btn-default" aria-label="Get PDF"
								onclick="document.forms['UrlToPdf'].submit(); return true;">
							<span class="glyphicon glyphicon-cloud-upload" aria-hidden="true"></span>&nbsp;Get PDF
						</button>
					</div>
				</div>
			}
		</div>
	</div>
	@* Html.Partial("Tags") *@
</div>
@* ReSharper restore UnknownCssClass *@